{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    //    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    //    "declaration": true,
    //    "removeComments": true,
    //    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
